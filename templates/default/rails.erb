<VirtualHost *:80>
ServerName <%= node["rails"]["server_name"] %>
  # !!! Be sure to point DocumentRoot to 'public'!
  DocumentRoot /home/vagrant/app/<%= node["rails"]["app_name"] %>/public
  RailsEnv production
  # RailsBaseURI /testapp/public
  <Directory /home/vagrant/app/<%= node["rails"]["app_name"] %>/public>
    # This relaxes Apache security settings.
    AllowOverride all
    # MultiViews must be turned off.
    Options -MultiViews
  </Directory>
</VirtualHost>
